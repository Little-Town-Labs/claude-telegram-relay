{
  "name": "claude-telegram-relay",
  "version": "1.0.0",
  "type": "module",
  "scripts": {
    "start": "tsx src/index.ts",
    "dev": "tsx watch src/index.ts",
    "relay": "tsx src/relay.ts",
    "typecheck": "tsc --noEmit",
