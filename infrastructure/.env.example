# Required
TELEGRAM_BOT_TOKEN=your-bot-token-from-botfather
TELEGRAM_USER_ID=your-telegram-user-id
ANTHROPIC_API_KEY=your-anthropic-api-key

# Optional - Relay settings
CLAUDE_PATH=claude
RELAY_DIR=/data/relay
CLI_TIMEOUT_MS=120000
SESSION_TTL_MS=86400000
NODE_ENV=production
LOG_LEVEL=info

# Optional - SecondBrain settings
SECONDBRAIN_ENABLED=true
SECONDBRAIN_DATA_DIR=/data/secondbrain
SECONDBRAIN_CONFIDENCE_THRESHOLD=0.6
SECONDBRAIN_GIT_ENABLED=false
SECONDBRAIN_GIT_AUTO_COMMIT=false

# Optional - Digest schedule
SECONDBRAIN_DAILY_ENABLED=true
SECONDBRAIN_DAILY_TIME=07:00
SECONDBRAIN_DAILY_TIMEZONE=America/Chicago
SECONDBRAIN_DAILY_LIMIT=3
SECONDBRAIN_WEEKLY_ENABLED=true
SECONDBRAIN_WEEKLY_DAY=sunday
SECONDBRAIN_WEEKLY_TIME=16:00
SECONDBRAIN_WEEKLY_TIMEZONE=America/Chicago
